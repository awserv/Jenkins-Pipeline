#pipeline
#boxfuse

pipeline {
   agent {
       docker {
           image 'docker-agent:lts'
       }
   }
   stages {
      stage('git pulling') {
         steps {
            git(url: 'https://github.com/awserv/BoxFuse-newVersion.git'
         }
      }
      stage('Build package') {
          steps {
              sh 'mvn package'
          }
      }
      stage('Build ') {
          steps {
              sh 'mv target/hello-1.0.war /usr/' # build maven
              sh 'cd /usr/' 
              sh 'docker build --tag 322.32.212.3:5000/boxfuse-jenkins .' #docker build
              sh 'docker push 322.32.212.3:5000/boxfuse-jenkins' # pushing repository
          }
      }
      stage('Run container') {
          steps {
              sh 'docker run -it -d -p 8081:8080 --name boxfuse-jenkins 322.32.212.3:5000/boxfuse-jenkins'
          }
          }
         }
    }
