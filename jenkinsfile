#pipeline
#boxfuse

pipeline {
   agent {
       docker {
           image 'docker-agent:latest'
       }
   }
   stages {
      stage('git pulling') {
         steps {
            git(url: 'https://github.com/boxfuse/boxfuse-sample-java-war-hello.git'
         }
      }
      stage('Build package') {
          steps {
              sh 'mvn package'
          }
      }
      stage('Build ') {
          steps {
              sh 'mv target/hello-1.0.war /usr/'
              sh 'cd /usr/ && docker build --tag 322.32.212.2:5000/boxfuse-jenkins .'
              sh 'docker push 322.32.212.2:5000/boxfuse-jenkins'
          }
      }
      stage('Run container') {
          steps {
              sh 'docker run -it -d -p 8081:8080 --name boxfuse-jenkins 322.32.212.2:5000/boxfuse-jenkins'
          }
      }
   }
}